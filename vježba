vrati kolko se put slovo ponavlja u rečenici ako se ne ponavlja vrati -1

#include <iostream>

using namespace std;
int vratine(char *polje, char trazeno){
if(*polje=='\0')
    return -1;
if(*polje==trazeno)
    return 1+vratine(polje+1,trazeno);
else
    return vratine(polje+1,trazeno);
}

int main()
{
string polje="David jede sarmu jer mu je fina i jer mu daje proteina";
char slovo;
cin>>slovo;
cout<<vratine(&polje[0],slovo);
}


provjeri je li prva znamenka broja parna ako je vrati 3 ako je vrati -2

#include <iostream>
#include <cmath>
using namespace std;

int provjera(int broj) {
    if (broj < 10) {
        if (broj % 2 == 0)
            return 3;
        else
            return -2;
    } else {
        return provjera(broj / 10);
    }
}

int main() {
    int broj;
    cin >> broj;
    cout << provjera(broj);
    return 0;
}


pretvori sve znakove u # ako nisu velika slova

      #include <iostream>
#include <cmath>
using namespace std;
void pretvori(char*polje){
if(*polje=='\0')
    return ;
if(!(*polje>='A'&&*polje<='Z'))
    *polje='#';
cout<<*polje;
pretvori(polje+1);
}

int main()
{
string polje="danweoN3OIR2Nobgoen903HR9";
pretvori(&polje[0]);
}

  
