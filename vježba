vrati kolko se put slovo ponavlja u reÄenici ako se ne ponavlja vrati -1

#include <iostream>

using namespace std;
int vrati(char *polje,char znak){
if(*polje=='\0')
    return -1;
if(*polje==znak)
    return 1+vrati(polje+1,znak);
else
    return vrati(polje+1,znak);

}

int main()
{
char polje[200];
gets(polje);
char znak;
cin>>znak;
if(vrati(&polje[0],znak)<0){
    cout<<vrati(&polje[0],znak);
}
else
cout<<1+vrati(&polje[0],znak);
}



provjeri je li prva znamenka broja parna ako je vrati 3 ako je vrati -2

#include <iostream>
#include <cmath>
using namespace std;

int provjera(int broj) {
    if (broj < 10) {
        if (broj % 2 == 0)
            return 3;
        else
            return -2;
    } else {
        return provjera(broj / 10);
    }
}

int main() {
    int broj;
    cin >> broj;
    cout << provjera(broj);
    return 0;
}


pretvori sve znakove u # ako nisu velika slova

      #include <iostream>
#include <cmath>
using namespace std;
void pretvori(char*polje){
if(*polje=='\0')
    return ;
if(!(*polje>='A'&&*polje<='Z'))
    *polje='#';
cout<<*polje;
pretvori(polje+1);
}

int main()
{
string polje="danweoN3OIR2Nobgoen903HR9";
pretvori(&polje[0]);
}

  
