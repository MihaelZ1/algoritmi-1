Unosi se broj sve dok nije unesen prosti broj

#include <iostream>
#include <string>
#include <cstdio>
#include <stdlib.h>

using namespace std;

bool prostibroj(int broj){
if(broj==1 || broj==0){
  return false;
}
for(int i=2;i<=broj/2;i++){
if(broj%i==0){
return false;
}
}
return true;
}
void unos(int &broj){
do{
cout<<"Unesite broj: ";
cin>>broj;

if(prostibroj(broj)==true){
    break;
}
}
while(prostibroj(broj)==false);
}
int main()
{
int broj;
unos(broj);
cout << "Unijeli ste prost broj: " << broj << endl;
}


Provjerava kolko broj ima parnih znamenki

#include <iostream>

using namespace std;
int parne_znamenke(int broj){
int br=0;
while(broj>0){
int znamenka=broj%10;
if(znamenka%2==0){
    br++;
}
broj/=10;
}
return br;
}    
int main()
{
int broj;
cin>>broj;
cout<<parne_znamenke(broj);
}

povrÅ¡ina prstena

#include <iostream>

using namespace std;
void povrsina_prstena(int r2,int r){
float povrsina=0;
povrsina=3.14*((r2*r2)-(r*r));
cout<<povrsina;
}
int main()
{
int r2,r;
cin>>r2>>r;
povrsina_prstena(r2,r);
}

udaljenost slova jedno od drugoga 


#include <iostream>

using namespace std;

void udaljenost(char prvo, char drugo) {
int razlika = abs(prvo - drugo);
if(razlika>13){
  razlika=26-razlika;
}
    cout << razlika << endl;
}

int main() {
char prvo;
char drugo;
cin >> prvo;
cin >> drugo;
udaljenost(prvo, drugo);
return 0;
}
